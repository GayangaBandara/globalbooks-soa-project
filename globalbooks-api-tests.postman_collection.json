{
    "info": {
        "name": "GlobalBooks API Tests",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "description": "Collection for testing GlobalBooks SOA services"
    },
    "item": [
        {
            "name": "Catalog Service",
            "item": [
                {
                    "name": "Get All Books",
                    "request": {
                        "method": "GET",
                        "url": "http://localhost:8080/catalog-service/books",
                        "header": []
                    }
                },
                {
                    "name": "Get Book by ID",
                    "request": {
                        "method": "GET",
                        "url": "http://localhost:8080/catalog-service/books/1",
                        "header": []
                    }
                }
            ]
        },
        {
            "name": "Orders Service",
            "item": [
                {
                    "name": "Create Order",
                    "request": {
                        "method": "POST",
                        "url": "http://localhost:8081/orders",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"customerId\": \"1\",\n    \"items\": [\n        {\n            \"bookId\": \"1\",\n            \"quantity\": 1\n        }\n    ]\n}"
                        }
                    }
                },
                {
                    "name": "Get Order Status",
                    "request": {
                        "method": "GET",
                        "url": "http://localhost:8081/orders/1",
                        "header": []
                    }
                }
            ]
        },
        {
            "name": "Payments Service",
            "item": [
                {
                    "name": "Process Payment",
                    "request": {
                        "method": "POST",
                        "url": "http://localhost:8082/payments",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"orderId\": \"1\",\n    \"amount\": 29.99,\n    \"currency\": \"USD\",\n    \"paymentMethod\": {\n        \"type\": \"CREDIT_CARD\",\n        \"cardNumber\": \"4111111111111111\",\n        \"expiryMonth\": \"12\",\n        \"expiryYear\": \"2025\",\n        \"cvv\": \"123\"\n    }\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Shipping Service",
            "item": [
                {
                    "name": "Create Shipment",
                    "request": {
                        "method": "POST",
                        "url": "http://localhost:8083/shipments",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"orderId\": \"1\",\n    \"address\": {\n        \"street\": \"123 Main St\",\n        \"city\": \"Boston\",\n        \"state\": \"MA\",\n        \"zipCode\": \"02108\",\n        \"country\": \"USA\"\n    }\n}"
                        }
                    }
                },
                {
                    "name": "Track Shipment",
                    "request": {
                        "method": "GET",
                        "url": "http://localhost:8083/shipments/1",
                        "header": []
                    }
                }
            ]
        }
    ]
}
